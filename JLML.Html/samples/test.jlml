{
	nav: using nav;
    tags: container;

    {
        tags: "form-row";

        input:
        {
            tags: "form-control";
            type: Text;
            name: "testInput";
            placeholder: "Placeholder Value";
            text: "Default Value";

            label:
            {
                tags: "col-form";
                text: "Text";
            }

            description: {
                tags: "form-text text-muted";
                text: "Help text";
            }
        }
    }
    input: using jlml.RowInput with(input)
    {
        tags: input.tags + "form-row" + "horizontal";
        name: "testInput";
        text: "imported input";
    };

    button: {
        tags: "btn btn-primary";
        text: "Submit";
    }
}
